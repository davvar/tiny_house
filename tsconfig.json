{
  "compilerOptions": {
    "typeRoots": [
      "./src/typings",
      "./node_modules/@types"
    ],
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "module": "CommonJS",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
  },
  "compileOnSave": true,
  "include": ["src"]
}